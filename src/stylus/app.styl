box-sizing()
  box-sizing border-box
  -moz-box-sizing border-box

#loader
  margin 50px auto 0 auto

#app
  max-width 820px
  margin 0 auto

  .logo
    line-height 60px
    height 60px
    h3, span
      float left
    span
      margin 10px 0 0 10px
      font-weight normal

  @media (max-width: 767px)
    .logo
      line-height 40px
      height 40px
      h3
        margin 0

  .main-buttons
    text-align right
    line-height 60px
    .popover
      width 325px
      line-height 30px
      .help-block
        margin 0
      input
        width 268px
        cursor text

  @media (max-width: 767px)
    .main-buttons
      text-align left
      line-height 30px
      .popover
        left -13px !important
      .btn-group
        width 100%
        button
          width 50%

  .username, .online
    line-height 30px
    a
      font-weight normal !important

  .online
    text-align right
    
  @media (max-width: 767px)
    .online
      text-align left

    .username
      line-height 40px

  .messagebox
    box-sizing()
    margin-top 10px

    .messages
      font-family Helvetica Neue, Helvetica, Arial, sans-serif
      overflow-y auto
      .message
        margin 4px 0
      .text
        word-wrap: break-word
        img
          cursor pointer
      .name
        font-weight bold
      .time, .name
        margin-right 10px
        display inline-block

    .typing
      height 20px
      line-height 20px
      background #e5e5e5
      padding 2px 6px
      -webkit-border-radius 3px
      -moz-border-radius 3px
      border-radius 3px

      > span
        float left
        line-height 20px
        font-weight normal

      span
        margin-right 5px
        font-family Helvetica Neue, Helvetica, Arial, sans-serif

      ul
        list-style none
        margin 0

      li
        float left

  @media (max-width: 767px)
    .messagebox
      margin-top 0

  .message-input
    position relative
    .input-wrapper
      width 100%
      box-sizing()
      padding 4px 160px 4px 0
      input
        width inherit

    form
      margin 0

    .uploader
      display none

    .btn-group
      width 160px
      position absolute
      right 0
      top 4px
      .text
        width 120px
      span
        margin 0 5px

    @media (max-width: 767px)
      .input-wrapper
        padding 4px 80px 4px 0
      .btn-group
        width 80px
        .text
          width 40px

  footer
    margin-top 10px
    line-height 30px
    
    .audio > button, .exit > button
      padding 4px 4px
      width 80px
      margin-left 5px
      & > i
        &.on, &.off
          height 9px
        &.on
          float left
        &.off
          float right
        &.text
          margin 0 5px

